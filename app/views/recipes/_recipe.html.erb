<!-- /recipes/_recipe -->

<!-- Card -->
<div class="card">
  <!--Card image-->
  <%= link_to_image_tag(recipe) %>

  <!--Card body -->
  <div class="card-body">
    <p class="card-text"><small class="text-muted">by <%= link_to recipe.user.name.titleize, user_path(recipe.user) %></small></p>
    <h4 class="card-title"><%= link_to_recipe_name(recipe) %></h4>
    <p class="card-text"><%= recipe.description %></p>
  </div> <!-- Card body -->
</div> <!-- Card -->
