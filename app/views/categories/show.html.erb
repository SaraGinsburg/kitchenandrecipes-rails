<!-- /categories/show -->

<div class="text-center">
  <h1 class="display-4"><%= @category.name.titleize %></h1>
    <%= image_tag("#{@category.slug}.jpeg", height: '156', width: '182') %>
  <hr>
</div>

<div class="container-fluids">
  <p class="text-center card-text"><small class="text-muted"><%= pluralize(@recipes.count, 'Recipe') %></small></p>
  <!-- Card columns -->
  <div class="card-columns">
    <%= render partial: 'recipes/recipe', collection: @recipes %>
  </div> <!-- Card columns -->
</div> <!-- Container -->
